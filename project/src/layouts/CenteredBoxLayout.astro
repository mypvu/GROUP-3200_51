---
import Layout from "@/layouts/Layout.astro";
const { title, subtitle } = Astro.props;
import { fade } from "astro:transitions";
---

<Layout title={title}>
    <div class="flex w-screen grow flex-col items-center">
        <!-- Header -->
        <header class="mb-24 text-center">
            <h1 class="text-4xl font-bold text-gray-800">
                {title ?? "Unknown"}
            </h1>
            <p class="mt-2 text-gray-600">
                {subtitle}
            </p>
        </header>

        <!-- Horizontal flexbox -->
        <div class="flex w-full max-w-7xl grow flex-row flex-wrap gap-7 p-5">
            <!-- Left (aside) -->
            <div class="flex flex-col gap-5">
                <a
                    href="/GROUP-3200_51/"
                    class="btn-hover-effect inline-block rounded-lg bg-gray-500 px-6 py-2 font-semibold text-white hover:bg-gray-600"
                >
                    Back to Home
                </a>

                <slot name="side-view" />
            </div>

            <!-- Right (main content) -->
            <div class="grow basis-1/2">
                <slot />
            </div>
        </div>
    </div>
</Layout>
