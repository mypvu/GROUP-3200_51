---
// note: global.css imports Tailwind
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title } = Astro.props;
---

<head>
    <meta charset="UTF-8" />
    <base href={import.meta.env.BASE_URL} />
</head>

<html lang="en" transition:name="root" transition:animate="none">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>HTPLC Compound Matcher</title>
    </head>

    <body
        class="flex min-h-screen flex-col justify-between bg-gradient-to-br from-blue-50 to-indigo-100 p-4"
    >
        <div class="grow" transition:animate="fade">
            <slot />
        </div>

        <!-- Footer -->
        <footer class="text-center text-sm text-gray-500">
            <p>HTPLC Compound Matcher v1.0 | {title ?? "Unknown"}</p>
        </footer>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        color: black;
    }
</style>
