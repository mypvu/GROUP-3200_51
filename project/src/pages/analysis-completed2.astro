---
const analyses = [
  { title: "KDS + NP", type: "kds-np" },
  { title: "LDS + NP", type: "lds-np" },
  { title: "KDS + VS", type: "kds-vs" },
  { title: "LDS + VS", type: "lds-vs" },
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Completed Analysis - HTPLC Compound Matcher</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .btn-hover-effect {
        transition: all 0.3s ease;
      }
      .btn-hover-effect:hover {
        transform: translateY(-2px);
      }
      .analysis-box {
        border: 2px solid #4B5563;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .analysis-box:hover {
        border-color: #10B981; /* green-500 */
      }
    </style>
  </head>

  <body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen p-4 flex flex-col">
    <div class="max-w-4xl mx-auto flex-grow">
      
      <!-- Header -->
      <header class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800">Completed Analysis</h1>
      </header>

      <!-- Save & Exit -->
      <div class="mb-8">
        <a
          href="/"
          class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg btn-hover-effect font-semibold inline-block"
        >
          Save & Exit
        </a>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column -->
        <div class="lg:col-span-1 space-y-6">
          <div class="bg-white rounded-lg p-6 shadow">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Notes</h3>
            <textarea
              class="w-full h-32 border border-gray-300 rounded p-3 focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="Add notes about your analyses here..."
            ></textarea>
            <button
              class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded mt-3 w-full btn-hover-effect font-semibold"
            >
              Save Notes
            </button>
          </div>
        </div>

        <!-- Right Column - Completed Analyses -->
        <div class="lg:col-span-2 space-y-4">
          {analyses.map((a) => (
            <div class="analysis-box bg-white p-6 shadow-md">
              <div class="flex justify-between items-center">
                <div>
                  <h3 class="text-2xl font-bold text-gray-800">{a.title}</h3>
                  <p class="text-green-600 font-bold mt-1">COMPLETED</p>
                </div>
                <div>
                  <a
                    href={`/analysis-detail?type=${a.type}`}
                    class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded btn-hover-effect font-semibold"
                  >
                    Edit
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Arrow Button Navigation -->
    <div class="text-center mt-10 mb-8">
      <a
        href="/analysis-results"
        class="inline-flex items-center justify-center w-14 h-14 bg-gray-100 rounded-full border-2 border-gray-300 hover:bg-gray-200 transition-all"
        title="Go to Results"
      >
        <span class="text-2xl text-gray-600">â†’</span>
      </a>
    </div>

    <!-- Footer -->
    <footer class="text-center py-6 text-gray-500 text-sm">
      <p>HTPLC Compound Matcher v1.0 | Completed Analysis</p>
    </footer>
  </body>
</html>
