---
import Layout from "@/layouts/Layout.astro";
---

<head>
    <meta charset="UTF-8" />
    <title>HTPLC Compound Matcher</title>
</head>

<Layout>
    <body
        class="flex min-h-screen flex-col bg-gradient-to-br from-blue-50 to-indigo-100"
    >
        <!-- Title -->
        <header class="mt-10 text-center">
            <h1 class="text-5xl font-bold text-gray-800">
                HTPLC Compound Matcher
            </h1>
        </header>

        <main class="mt-12 flex flex-1 items-center justify-center px-4">
            <div class="flex flex-col items-center gap-12 lg:flex-row">
                <!-- Left side buttons -->
                <div class="flex flex-col gap-6">
                    <a
                        href="/database"
                        class="btn-hover-effect w-48 rounded-2xl border-2 border-black bg-white px-4 py-6 text-center text-xl font-semibold hover:bg-gray-100"
                    >
                        View<br />Database
                    </a>

                    <a
                        href="/saved-analysis"
                        class="btn-hover-effect w-48 rounded-2xl border-2 border-black bg-white px-4 py-6 text-center text-xl font-semibold hover:bg-gray-100"
                    >
                        Saved<br />Analyses
                    </a>
                </div>

                <!-- Divider -->
                <div class="hidden h-40 w-px bg-gray-300 lg:block"></div>

                <!-- Right side main box -->
                <div
                    class="flex flex-col items-center justify-center rounded-2xl border-2 border-black bg-white px-16 py-20"
                >
                    <h2 class="mb-8 text-3xl font-semibold text-gray-800">
                        Start New Analysis
                    </h2>
                    <a
                        href="/analysis/new"
                        class="btn-hover-effect flex h-16 w-16 items-center justify-center rounded-full border-2 border-black hover:bg-gray-100"
                    >
                        <span class="text-3xl font-bold">â†’</span>
                    </a>
                </div>
            </div>
        </main>

        <footer class="py-6 text-center text-sm text-gray-500">
            <p>HTPLC Compound Matcher v1.0</p>
        </footer>
    </body>
</Layout>
