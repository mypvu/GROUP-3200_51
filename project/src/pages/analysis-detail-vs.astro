

---
// src/pages/analysis-detail-vs.astro
const params = new URL(Astro.request.url).searchParams;
const name = params.get("name") || "Analysis";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Analysis Detail - HTPLC Compound Matcher</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .btn-hover-effect {
        transition: all 0.3s ease;
      }
      .btn-hover-effect:hover {
        transform: translateY(-2px);
      }
      .input-field {
        border: 1px solid #D1D5DB;
        border-radius: 6px;
        padding: 10px 12px;
        width: 120px;
        font-size: 16px;
        text-align: center;
      }
      .input-field:focus {
        outline: none;
        border-color: #3B82F6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
      }
      .arrow-hover {
        transition: all 0.3s ease;
      }
      .arrow-hover:hover {
        transform: translateX(4px);
        background-color: #3B82F6;
        border-color: #3B82F6;
        color: white;
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen p-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- Left Column: Notes and Save & Exit stacked -->
      <div class="flex gap-8">
        <!-- Left Side: Notes and Save & Exit -->
        <div class="flex flex-col gap-4 w-64">
          <!-- Save & Exit Button (Top) -->
          <a href="/analysis" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg btn-hover-effect font-semibold text-center">
            Save & Exit
          </a>

          <!-- Compact Notes Box (Below Save & Exit) -->
          <div class="bg-white rounded-2xl shadow-lg p-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Notes</h3>
            <textarea 
              class="w-full border border-gray-300 rounded-lg p-2 h-20 text-sm mb-2"
              placeholder="Add notes here..."
            ></textarea>
            <button class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-lg w-full btn-hover-effect font-semibold text-sm">
              Save Notes
            </button>
          </div>
        </div>

        <!-- Right Side: Analysis Form Card -->
        <div class="flex-1">
          <div class="bg-white rounded-2xl shadow-lg p-8 relative">
            
            <!-- Header -->
            <div class="text-center mb-8">
              <h1 class="text-3xl font-bold text-gray-800 mb-2">New Analysis</h1>
              <h2 class="text-2xl font-semibold text-gray-600">{name}</h2>
            </div>

            <div class="space-y-6">
              <!-- Rf Input -->
              <div class="flex items-center justify-center space-x-4">
                <label class="text-lg font-semibold text-gray-700 w-32 text-right">Rf:</label>
                <input type="text" class="input-field" placeholder="______">
              </div>

              <!-- RGB Inputs -->
              <div class="space-y-4">
                <!-- RGB 1 -->
                <div class="flex items-center justify-center space-x-4">
                  <label class="text-lg font-semibold text-gray-700 w-64 text-right">RGB 1 (H° DEV 254 nm):</label>
                  <input type="text" class="input-field" placeholder="______">
                  <span class="font-semibold">CF1:</span>
                  <input type="text" class="input-field" placeholder="______">
                </div>
                
                <!-- RGB 2 -->
                <div class="flex items-center justify-center space-x-4">
                  <label class="text-lg font-semibold text-gray-700 w-64 text-right">RGB2 (H° DEV 366 nm):</label>
                  <input type="text" class="input-field" placeholder="______">
                  <span class="font-semibold">CF2:</span>
                  <input type="text" class="input-field" placeholder="______">
                </div>
                
                <!-- RGB 3 -->
                <div class="flex items-center justify-center space-x-4">
                  <label class="text-lg font-semibold text-gray-700 w-64 text-right">RGB3 (H° NP 366 nm):</label>
                  <input type="text" class="input-field" placeholder="______">
                  <span class="font-semibold">CF3:</span>
                  <input type="text" class="input-field" placeholder="______">
                </div>
              </div>

              <!-- T VSA -->
            <div class="flex flex-wrap items-center justify-center gap-4 mt-6">
            <label class="text-lg font-semibold text-gray-700 w-72 text-right">
                T VSA (H° and C):
            </label>
            <input type="text" class="input-field" placeholder="______">
            <span class="font-semibold">CF4:</span>
            <input type="text" class="input-field" placeholder="______">
            </div>



              <!-- UV Vis Peaks -->
              <div class="space-y-3">
                <div class="flex items-center justify-center space-x-4">
                  <label class="text-lg font-semibold text-gray-700 w-32 text-right">UV Vis Peaks</label>
                  <input type="text" class="input-field w-20" placeholder="___">
                  <span class="font-semibold">UV λ.1:</span>
                  <input type="text" class="input-field" placeholder="___">
                  <span class="font-semibold">UV λ.2:</span>
                  <input type="text" class="input-field" placeholder="___">
                  <span class="font-semibold">UV λ.3:</span>
                  <input type="text" class="input-field" placeholder="___">
                </div>
              </div>

              <!-- FI Peaks -->
              <div class="space-y-3">
                <div class="flex items-center justify-center space-x-4">
                  <label class="text-lg font-semibold text-gray-700 w-32 text-right">FI Peaks</label>
                  <input type="text" class="input-field w-20" placeholder="___">
                  <span class="font-semibold">FI λ.1:</span>
                  <input type="text" class="input-field" placeholder="___">
                  <span class="font-semibold">FI λ.2:</span>
                  <input type="text" class="input-field" placeholder="___">
                  <span class="font-semibold">FI λ.3:</span>
                  <input type="text" class="input-field" placeholder="___">
                </div>
              </div>


            <!-- Centered Arrow at Bottom -->
            <div class="text-center mt-8">
            <a
                href="/analysis"
                title="Complete Analysis"
                class="inline-flex items-center justify-center w-12 h-12 bg-gray-100 rounded-full border-2 border-gray-300 arrow-hover cursor-pointer"
            >
                <span class="text-2xl font-bold text-gray-600">→</span>
            </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>