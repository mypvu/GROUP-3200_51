---
// src/pages/analysis/new.astro
import Layout from "@/layouts/Layout.astro";
---

<head>
    <title>New Analysis - HTPLC Compound Matcher</title>
</head>

<style>
    .analysis-box {
        border: 2px solid #4b5563;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    .analysis-box:hover {
        border-color: #3b82f6;
    }
</style>

<Layout>
    <body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
        <div class="mx-auto max-w-4xl">
            <!-- Header -->
            <header class="mb-8 text-center">
                <h1 class="text-4xl font-bold text-gray-800">New Analysis</h1>
            </header>

            <!-- Save & Exit Button -->
            <div class="mb-8">
                <a
                    href="/"
                    class="btn-hover-effect inline-block rounded-lg bg-gray-500 px-6 py-2 font-semibold text-white hover:bg-gray-600"
                >
                    Save & Exit
                </a>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
                <!-- Left Column - Notes Only -->
                <div class="space-y-6 lg:col-span-1">
                    <div class="rounded-lg bg-white p-6">
                        <h3 class="mb-4 text-xl font-bold text-gray-800">
                            Notes
                        </h3>
                        <textarea
                            class="h-32 w-full rounded border border-gray-300 p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                            placeholder="Add notes about your analyses here..."
                        ></textarea>
                        <button
                            class="btn-hover-effect mt-3 w-full rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                        >
                            Save Notes
                        </button>
                    </div>
                </div>

                <!-- Right Column - Analysis Boxes -->
                <div class="space-y-4 lg:col-span-2">
                    <!-- KDS + NP -->
                    <div class="analysis-box bg-white p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-2xl font-bold text-gray-800">
                                    KDS + NP
                                </h3>
                                <p class="mt-1 font-bold text-red-500">
                                    INCOMPLETE
                                </p>
                            </div>
                            <a
                                href={`/analysis/new/details?type=kds-np&name=KDS%20NP`}
                                class="btn-hover-effect rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                            >
                                Edit
                            </a>
                        </div>
                    </div>

                    <!-- LDS + NP -->
                    <div class="analysis-box bg-white p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-2xl font-bold text-gray-800">
                                    LDS + NP
                                </h3>
                                <p class="mt-1 font-bold text-red-500">
                                    INCOMPLETE
                                </p>
                            </div>
                            <a
                                href={`/analysis/new/details?type=lds-np&name=LDS%20NP`}
                                class="btn-hover-effect rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                            >
                                Edit
                            </a>
                        </div>
                    </div>

                    <!-- KDS + VS -->
                    <div class="analysis-box bg-white p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-2xl font-bold text-gray-800">
                                    KDS + VS
                                </h3>
                                <p class="mt-1 font-bold text-red-500">
                                    INCOMPLETE
                                </p>
                            </div>
                            <a
                                href={`/analysis/new/details-vs?type=kds-vs&name=KDS%20VS`}
                                class="btn-hover-effect rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                            >
                                Edit
                            </a>
                        </div>
                    </div>

                    <!-- LDS + VS -->
                    <div class="analysis-box bg-white p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-2xl font-bold text-gray-800">
                                    LDS + VS
                                </h3>
                                <p class="mt-1 font-bold text-red-500">
                                    INCOMPLETE
                                </p>
                            </div>
                            <a
                                href={`/analysis/new/details-vs?type=lds-vs&name=LDS%20VS`}
                                class="btn-hover-effect rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                            >
                                Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="mt-8 py-6 text-center text-sm text-gray-500">
            <p>HTPLC Compound Matcher v1.0 | New Analysis</p>
        </footer>
    </body>
</Layout>
