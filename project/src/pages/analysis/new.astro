---
// src/pages/analysis-new.astro
import Layout from "@/layouts/Layout.astro";
---

<style>
    .analysis-box {
        border: 2px solid #ef4444;
        border-radius: 8px;
        transition: all 0.3s ease;
        background: white;
        cursor: pointer;
    }
    .analysis-box:hover {
        border-color: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
    }
    .analysis-box.selected {
        border-color: #3b82f6;
        background: #eff6ff;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        transform: scale(1.02);
    }
    .analysis-container {
        border: 2px solid #4b5563;
        border-radius: 12px;
        background: #f9fafb;
    }
    .arrow-enabled {
        background-color: #3b82f6;
        border-color: #3b82f6;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .arrow-enabled:hover {
        transform: translateX(4px);
        background-color: #2563eb;
        border-color: #2563eb;
    }
    .arrow-disabled {
        background-color: #9ca3af;
        border-color: #9ca3af;
        color: white;
        opacity: 0.5;
        cursor: not-allowed;
    }
</style>

<head>
    <title>New Analysis - HTPLC Compound Matcher</title>
</head>

<Layout>
    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
        <div class="mx-auto max-w-6xl">
            <!-- Save & Exit Button -->
            <div class="mb-6">
                <a
                    href="/"
                    class="btn-hover-effect inline-block rounded-lg bg-gray-500 px-6 py-2 font-semibold text-white hover:bg-gray-600"
                >
                    Save & Exit
                </a>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
                <!-- Left Column - Notes Only -->
                <div class="lg:col-span-1">
                    <!-- Notes Section -->
                    <div class="rounded-lg bg-white p-6">
                        <h3 class="mb-4 text-xl font-bold text-gray-800">
                            Notes
                        </h3>
                        <textarea
                            class="h-40 w-full rounded border border-gray-300 p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                            placeholder="Add notes about your analyses here..."
                        ></textarea>
                        <button
                            class="btn-hover-effect mt-3 w-full rounded bg-blue-500 px-4 py-2 font-semibold text-white hover:bg-blue-600"
                        >
                            Save Notes
                        </button>
                    </div>
                </div>

                <!-- Right Column - Big Analysis Container with 4 Boxes -->
                <div class="lg:col-span-3">
                    <div class="analysis-container p-6" id="analysis-container">
                        <!-- Centered Title -->
                        <h3
                            class="mb-6 text-center text-2xl font-bold text-gray-800"
                        >
                            New Analysis
                        </h3>

                        <!-- Grid of 4 Analysis Boxes -->
                        <div
                            class="mb-8 grid grid-cols-1 gap-4 lg:grid-cols-2"
                            id="analysis-grid"
                        >
                            <!-- KDS + NP Box -->
                            <div class="analysis-box p-6" data-type="kds-np">
                                <div class="text-center">
                                    <h4
                                        class="mb-2 text-xl font-bold text-gray-800"
                                    >
                                        KDS + NP
                                    </h4>
                                    <p class="font-bold text-red-500">
                                        INCOMPLETE
                                    </p>
                                </div>
                            </div>

                            <!-- LDS + NP Box -->
                            <div class="analysis-box p-6" data-type="lds-np">
                                <div class="text-center">
                                    <h4
                                        class="mb-2 text-xl font-bold text-gray-800"
                                    >
                                        LDS + NP
                                    </h4>
                                    <p class="font-bold text-red-500">
                                        INCOMPLETE
                                    </p>
                                </div>
                            </div>

                            <!-- KDS + VS Box -->
                            <div class="analysis-box p-6" data-type="kds-vs">
                                <div class="text-center">
                                    <h4
                                        class="mb-2 text-xl font-bold text-gray-800"
                                    >
                                        KDS + VS
                                    </h4>
                                    <p class="font-bold text-red-500">
                                        INCOMPLETE
                                    </p>
                                </div>
                            </div>

                            <!-- LDS + VS Box -->
                            <div class="analysis-box p-6" data-type="lds-vs">
                                <div class="text-center">
                                    <h4
                                        class="mb-2 text-xl font-bold text-gray-800"
                                    >
                                        LDS + VS
                                    </h4>
                                    <p class="font-bold text-red-500">
                                        INCOMPLETE
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Arrow Navigation -->
                        <div class="text-center">
                            <div
                                id="next-arrow"
                                class="arrow-disabled inline-flex h-12 w-12 items-center justify-center rounded-full border-2"
                            >
                                <span class="text-2xl font-bold">â†’</span>
                            </div>
                            <p
                                id="arrow-message"
                                class="mt-2 text-sm text-gray-600"
                            >
                                Select an analysis to continue
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="mt-8 py-6 text-center text-sm text-gray-500">
            <p>HTPLC Compound Matcher v1.0 | New Analysis</p>
        </footer>

        <script>
            // Wait for DOM to be fully loaded
            document.addEventListener("DOMContentLoaded", function () {
                let selectedAnalysis = null;
                const arrow = document.getElementById("next-arrow");
                const message = document.getElementById("arrow-message");

                // Function to deselect all boxes
                function deselectAllBoxes() {
                    document.querySelectorAll(".analysis-box").forEach((b) => {
                        b.classList.remove("selected");
                    });
                    selectedAnalysis = null;
                    arrow.classList.remove("arrow-enabled");
                    arrow.classList.add("arrow-disabled");
                    message.textContent = "Select an analysis to continue";
                    message.className = "text-sm text-gray-600 mt-2";
                }

                // Add click event listeners to all analysis boxes
                document.querySelectorAll(".analysis-box").forEach((box) => {
                    box.addEventListener("click", function (e) {
                        // Stop event from bubbling
                        e.stopPropagation();

                        // If clicking the already selected box, deselect it
                        if (this.classList.contains("selected")) {
                            deselectAllBoxes();
                            return;
                        }

                        // Remove selection from all boxes
                        document
                            .querySelectorAll(".analysis-box")
                            .forEach((b) => {
                                b.classList.remove("selected");
                            });

                        // Add selection to clicked box
                        this.classList.add("selected");
                        selectedAnalysis = this.getAttribute("data-type");

                        // Enable the arrow
                        arrow.classList.remove("arrow-disabled");
                        arrow.classList.add("arrow-enabled");
                        message.textContent = "Click arrow to continue";
                        message.className =
                            "text-sm text-green-600 mt-2 font-semibold";
                    });
                });

                // Click anywhere on the page to deselect
                document.addEventListener("click", function (e) {
                    // Only deselect if clicking outside analysis boxes
                    const clickedBox = e.target.closest(".analysis-box");
                    if (!clickedBox) {
                        deselectAllBoxes();
                    }
                });

                // Arrow click handler
                arrow.addEventListener("click", function (e) {
                    if (this.classList.contains("arrow-disabled")) {
                        e.preventDefault();
                        e.stopPropagation();
                        return false;
                    }

                    if (selectedAnalysis) {
                        // Navigate to analysis-detail page with the selected type
                        window.location.href = `/analysis-detail?type=${selectedAnalysis}`;
                    }
                });
            });
        </script>
    </div>
</Layout>
