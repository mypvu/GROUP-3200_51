---
import Layout from "@/layouts/Layout.astro";
import SessionResultsView from "@/components/analysis/results/SessionResultsView.tsx";
---

<head>
    <meta charset="UTF-8" />
    <title>Results - HTPLC Compound Matcher</title>
</head>

<Layout>
    <body
        class="flex min-h-screen flex-col items-center bg-gradient-to-br from-blue-50 to-indigo-100"
    >
    <!-- Header -->
    <header class="mt-10 mb-8 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Results</h1>
        <p class="mt-2 text-gray-600">
            View results
        </p>
    </header>

    <!-- Back Button -->
    <a
        href="/GROUP-3200_51/"
        class="btn-hover-effect mb-8 inline-block rounded-lg bg-gray-500 px-6 py-2 font-semibold text-white hover:bg-gray-600"
    >
        ← Back to Home
    </a>

    <!-- Saved Analyses List -->
    <SessionResultsView client:load />

    <!-- Footer -->
    <footer class="mt-10 py-6 text-center text-sm text-gray-500">
        <p>HTPLC Compound Matcher v1.0 | Results</p>
    </footer>
    </body>
</Layout>
