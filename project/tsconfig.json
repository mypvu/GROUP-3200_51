{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2020",              // or later (ES2015+ is needed for iterators)
    "module": "esnext",            // or esnext, etc.
    "lib": ["ES2020", "DOM"],        // important: include ES2015 or newer
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
        "@/*": ["*"],
        "@core/*": ["logic/core/*"]
      }
  },
  
}
